<odoo>
     <data>
        <template id="extend_report_picking_expiration_date" inherit_id="stock.report_picking">
            <!-- Trova la colonna dove c'è il lotto barcode -->
            <xpath expr="//td[contains(@class, 'text-center') and contains(@class, 'h6')]" position="inside">
                <t t-if="ml.lot_id.expiration_date">
                    <br/>
                    <strong>Scadenza:</strong>
                    <t t-esc="ml.lot_id.expiration_date.strftime('%d/%m/%Y')"/>
                </t>
            </xpath>
        </template>

         <template id="report_traceability_inherit_header" inherit_id="stock.report_stock_body_print">
              <xpath expr="//thead/tr[contains(concat(' ', normalize-space(@class), ' '), ' o_report_header ')]"
                     position="replace">
                <tr class="o_report_header">
                  <th class="o_report_line_header">Reference</th>
                  <th class="o_report_line_header">Product</th>
                  <th class="o_report_line_header">Date</th>
                  <th class="o_report_line_header">Lot/Serial #</th>
                  <th class="o_report_line_header">Data scadenza</th> <!-- ex From -->
                  <!-- ex To: rimosso -->
                  <th class="o_report_line_header">Quantity</th>
                </tr>
            </xpath>
         </template>


<template id="report_traceability_custom_blocks"
          inherit_id="stock.report_stock_body_print">

  <!-- STILI + BLOCCO PRE-TABELLA: Prodotto + Start prod. -->
  <xpath expr="//table[.//tr[contains(concat(' ', normalize-space(@class), ' '), ' o_report_header ')]]"
         position="before">
    <style type="text/css">
      .o_trace_ctx_top strong, .o_trace_ctx_bottom strong { white-space: nowrap; }
      .o_trace_ctx_top { border-bottom: 1px solid #ddd; padding-bottom: 4px; margin-bottom: 4px; }
      .o_trace_ctx_bottom { border-top: 1px solid #ddd; padding-top: 4px; margin-top: 8px; }
    </style>

    <div class="row o_trace_ctx_top">
      <div class="col-6">
        <strong>Prodotto:</strong>
        <t t-esc="(env.context or {}).get('mrp_product_name') or '-'"/>
      </div>
      <div class="col-6">
        <strong>Start prod.:</strong>
            <t t-esc="(env.context or {}).get('mrp_date_start_fmt') or '-'"/>

      </div>
    </div>

    <!-- COMPONENTI: uso mrp_production_id dal contesto, niente xpath nella vista MRP -->
    <t t-set="prod" t-value="env['mrp.production'].browse(((env.context or {}).get('mrp_production_id')) or 0)"/>
    <t t-if="prod">
      <h4 class="mt8 mb4">Componenti</h4>
      <table class="table table-sm">
        <thead>
          <tr>
            <th>Prodotto</th>
            <th class="text-end">Quantità</th>
            <th>Lotti</th>
          </tr>
        </thead>
        <tbody>
          <tr t-foreach="prod.move_raw_ids" t-as="rm">
            <td><span t-esc="rm.product_id.display_name"/></td>
            <td class="text-end">
              <t t-if="rm.quantity_done">
                <span t-esc="rm.quantity_done"/> <span t-esc="rm.product_uom.name"/>
              </t>
              <t t-else="">
                <span t-esc="rm.product_uom_qty"/> <span t-esc="rm.product_uom.name"/>
              </t>
            </td>
            <td>
              <t t-set="lots" t-value="rm.move_line_ids.filtered(lambda ml: ml.state == 'done' and ml.lot_id).mapped('lot_id')"/>
              <t t-if="lots">
                <ul class="mb0">
                  <t t-foreach="set(lots)" t-as="lot">
                    <li><span t-esc="lot.name"/></li>
                  </t>
                </ul>
              </t>
              <t t-else="">-</t>
            </td>
          </tr>
        </tbody>
      </table>
    </t>
  </xpath>

  <!-- BLOCCO POST-TABELLA: Durata, Responsabile, Tipo operazione -->
  <xpath expr="//table[.//tr[contains(concat(' ', normalize-space(@class), ' '), ' o_report_header ')]]"
         position="after">
    <div class="o_trace_ctx_bottom">
      <table class="table table-sm table-borderless">
        <tbody>
          <tr>
            <td>
              <strong>Durata:</strong>
              <t t-esc="(env.context or {}).get('mrp_duration_human') or '-'"/>

            </td>
            <td>
              <strong>Responsabile:</strong>
              <t t-esc="(env.context or {}).get('mrp_user_name') or '-'"/>
            </td>
            <td>
              <strong>Tipo operazione:</strong>
              <t t-esc="(env.context or {}).get('mrp_picking_type_name') or '-'"/>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </xpath>

</template>





       <template id="report_mrporder_inherit_lot_exp" inherit_id="mrp.report_mrporder">

      <!-- Seleziona la riga info prodotto (quella che contiene <span t-field="o.product_id">) -->
      <xpath expr="//div[contains(@class,'row') and contains(@class,'mt32') and contains(@class,'mb32')]
                   [.//span[@t-field='o.product_id']][1]"
             position="after">

        <div class="row mt8">
          <!-- Caso 1: lotto unico impostato sulla produzione -->
          <t t-if="o.lot_producing_id">
            <div class="col-3">
              <strong>Lotto:</strong><br/>
              <span t-field="o.lot_producing_id.name"/>
            </div>
            <div class="col-3">
              <strong>Scadenza:</strong><br/>
              <t t-set="exp" t-value="o.lot_producing_id.expiration_date or o.lot_producing_id.use_date"/>
              <t t-if="exp"><span t-esc="exp.strftime('%d/%m/%Y')"/></t>
              <t t-else="">-</t>
            </div>
          </t>

          <!-- Caso 2: nessun lotto fissato → elenco i lotti prodotti (state == 'done') -->
          <t t-else="">
            <div class="col-12">
              <strong>Lotti prodotti:</strong>
              <ul class="mb0">
                <t t-set="lots_done"
                   t-value="o.move_finished_ids.mapped('move_line_ids').filtered(lambda ml: ml.state == 'done').mapped('lot_id')"/>
                <t t-foreach="set(lots_done)" t-as="lot">
                  <t t-if="lot">
                    <li>
                      <span t-esc="lot.name"/>
                      <t t-set="exp" t-value="lot.expiration_date or lot.use_date"/>
                      <t t-if="exp"> — <span t-esc="exp.strftime('%d/%m/%Y')"/></t>
                    </li>
                  </t>
                </t>
              </ul>
            </div>
          </t>
        </div>

      </xpath>
        </template>
