<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_company_form_inherit" model="ir.ui.view">
            <field name="name">gls_italy.res_company.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//page[last()]" position="after">
                    <page string="GLS Italy Configuration">
                        <group>
                            <field name="use_gls_italy_shipping_provider" />
                        </group>
                        <group>
                            <group invisible="use_gls_italy_shipping_provider != True">
                                <field name="gls_italy_sede" required="use_gls_italy_shipping_provider != False"  />
                                <field name="gls_italy_customer_code" required="use_gls_italy_shipping_provider != False"  />
                                <field name="gls_italy_password"  required="use_gls_italy_shipping_provider != False" />
                                <field name="gls_italy_contract_code" required="use_gls_italy_shipping_provider != False" />
                                <field name="gls_italy_api_url" required="use_gls_italy_shipping_provider != False" />

                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>